<configuration scan="true">

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%level [%thread] %logger{15} - %message%n%xException{10}</pattern>
        </encoder>
    </appender>

    <logger name="pickup" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>

</configuration>
